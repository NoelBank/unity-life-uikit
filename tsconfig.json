{
  "compilerOptions": {
    "resolveJsonModule": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "lib": ["dom", "es2015", "es2016", "es2019.array"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "isolatedModules": true,
    "paths": {
      // @uikit is deprecated, use @/uitkit instead
      "@uikit/*": ["src/uikit/*"]
    }
  },
  "exclude": ["dist/**/*", "public/**/*", "node_modules", "plop/plopfile.js"]
}
